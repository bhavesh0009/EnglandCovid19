    <div class="container">
        <div class="card mb-2" id="regionTitle">
            <div class="card-body text-center">
                <h4>MSOA Details</h4>
            </div>
        </div>
    </div>
    <div class="container">
        <table class="table table-striped table-dark table-bordered text-center table-hover">
            <thead>
                <tr>
                    <th>MSOA Code</th>
                    <th>MSOA Name</th>
                    <th>Last 7 Days Cases</th>
                </tr>
            </thead>
            <tbody>
                <% filteredMSOA.forEach(function(town){ %>
                <tr>
                    <td scope="row"><%= town.msoa11_cd%></a></td>
                    <td><%= town.msoa11_hclnm%></td>
                    <td><%= town.latest_7_days%></td>
                </tr>
            </tbody>
            <% }) %>
        </table>

    </div>
    <div class="container">
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
