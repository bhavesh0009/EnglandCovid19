    <section id="header">
        <div class="container text-center" id="jumboContainer">
            <div class="jumbotron mb-2" id="jumboContainerResults">
                <h2>U.K. Covid-19 Dashboard</h2>
                <p class="mb-2">Daily trend of Covid-19 for your area.</p>
            </div>
        </div>
    </section>

    <section id="search-again">
        <div class="container" id="result-search">
            <form action="/results" method='GET'>
                <div class="row d-flex justify-content-center" id="search-input">
                    <div class="input-group mb-3 col-lg-12 col-12">
                        <input type="text" class="form-control" placeholder="Search again with postal code."
                            name="postalCode">
                        <div class="input-group-append">

                            <button type="submit" class="btn btn-default" id="basic-addon2">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <div class="container">
        <div class="card mb-2" id="regionTitle">
            <div class="card-body text-center">
                <h4><%= areaName%></h4>
            </div>
        </div>
    </div>
    <section id="cards">
        <div class="container">
            <div class="card-deck text-center">
                <div class="card shadow-sm" id="mainCards">
                    <div class="card-header" id="mainCardHeader">
                        <h4 class="my-0 font-weight-normal">Total Cases</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title"><%= areaTotal%></h1>
                    </div>
                </div>
                <div class="card shadow-sm" id="mainCards">
                    <div class="card-header"  id="mainCardHeader">
                        <h4 class="my-0 font-weight-normal">Last 30 days</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title"><%= arealast30%></h1>
                    </div>
                </div>
                <div class="card shadow-sm" id="mainCards">
                    <div class="card-header" id="mainCardHeader">
                        <h4 class="my-0 font-weight-normal">Last 7 days</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title"><%= arealast7%></h1>
                    </div>
                </div>                
                <div class="card shadow-sm" id="mainCards">
                    <div class="card-header"  id="mainCardHeader">
                        <h4 class="my-0 font-weight-normal">Growth</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title"><%= areaR%></h1>
                    </div>
                </div>
            </div>
        </div>    
    </section>
    <div class="container">
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <ins class="adsbygoogle"
            style="display:block"
            data-ad-format="fluid"
            data-ad-layout-key="-gw-3+1f-3d+2z"
            data-ad-client="ca-pub-3644243863892421"
            data-ad-slot="5567378684"></ins>
        <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
        </script>    
    </div>    
    <div class="container mb-0 mt-3">
        <nav class="nav nav-pills nav-justified bg-dark" style="color: #ffffff;">
            <a class="nav-item nav-link active" data-toggle="tab" href="#nav-30days">Last 30 Days</a>
            <a class="nav-item nav-link" data-toggle="tab" href="#nav-total">Total</a>
        </nav>
    </div>
    <div class="tab-content mt-0" >
        <div class="tab-pane active" id="nav-30days">
            <div class="container my-3" id="plotLower">
            </div>
            <script>
               var confirmedCasesPlt = [<%- confirmedCases %>];
               confirmedCasesPlt = confirmedCasesPlt.slice(confirmedCasesPlt.length - 30);
               var ma7LowerPlt = [<%- ma7Lower %>];
               ma7LowerPlt = ma7LowerPlt.slice(ma7LowerPlt.length - 30, ma7LowerPlt.length - 5);
               var specimenDatePlt = [];
               var areaNamePlt = "<%- areaName %>";
                   <% for (var j = 0; j < specimenDate.length; j++) { %>
                   specimenDatePlt.push('<%- specimenDate[j]%>');
                   <%}%>
                specimenDatePlt = specimenDatePlt.slice(specimenDatePlt.length - 30);
                   var data1 = [
                   {
                       x: specimenDatePlt,
                       y: confirmedCasesPlt,
                       type: 'bar',
                       marker: {
                           color: "#ffffff"
                       },
                       name: 'Daily Cases'
                   },
                   {
                       x: specimenDatePlt,
                       y: ma7LowerPlt,
                       type: 'scatter',
                       marker: {
                           color: "#000000"
                       },
                       name: '7 Days Moving Average'
                   }
       
               ];
               var layout = {
                   title: {
                       text: 'Lower Local Authority : ' + areaNamePlt
                   },
                   paper_bgcolor: "#2a9d8f",
                   plot_bgcolor: "#2a9d8f",
                   xaxis: {
                       title: 'Specimen Date',
                       type: 'date',
                       tickangle: -75,
                       dtick: 86400000.0 * 2
                   },
                   yaxis: {
                       title: 'Number of Positive Cases'
                   },
                   showlegend: true,
                   legend: {
                       x: 1,
                       xanchor: 'right',
                       y: 1
                   }
               }
               var config = { responsive: true }
       
               Plotly.newPlot('plotLower', data1, layout, config);    
           </script>        
        </div>        
        <div class="tab-pane fade" id="nav-total">
            <div class="container my-3" id="plotTotal">
            </div>
            <script>
               var confirmedCasesPlt = [<%- confirmedCases %>];
               var ma7LowerPlt = [<%- ma7Lower %>];
               ma7LowerPlt = ma7LowerPlt.slice(0, ma7LowerPlt.length - 5);
               var specimenDatePlt = [];
               var areaNamePlt = "<%- areaName %>";
                   <% for (var j = 0; j < specimenDate.length; j++) { %>
                   specimenDatePlt.push('<%- specimenDate[j]%>');
                   <%}%>
       
                   var data1 = [
                   {
                       x: specimenDatePlt,
                       y: confirmedCasesPlt,
                       type: 'bar',
                       marker: {
                           color: "#ffffff"
                       },
                       name: 'Daily Cases'
                   },
                   {
                       x: specimenDatePlt,
                       y: ma7LowerPlt,
                       type: 'scatter',
                       marker: {
                           color: "#000000"
                       },
                       name: '7 Days Moving Average'
                   }
       
               ];
               var layout = {
                   title: {
                       text: 'Lower Local Authority : ' + areaNamePlt
                   },
                   paper_bgcolor: "#2a9d8f",
                   plot_bgcolor: "#2a9d8f",
                   xaxis: {
                       title: 'Specimen Date',
                       type: 'date',
                       tickangle: -75,
                       dtick: 86400000.0 * 10
                   },
                   yaxis: {
                       title: 'Number of Positive Cases'
                   },
                   showlegend: true,
                   legend: {
                       x: 1,
                       xanchor: 'right',
                       y: 1
                   }
               }
               var config = { responsive: true }
       
               Plotly.newPlot('plotTotal', data1, layout, config);    
           </script>        
        </div>        
